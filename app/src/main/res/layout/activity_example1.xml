<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button

            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_test1_start"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar1"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_test1_stop" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_test1_start"
            app:layout_constraintTop_toTopOf="@+id/btn_test1_start"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test1_start"/>
    <Button
            android:text="HardWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_hard_work" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/btn_test1_start"/>
    <Button
            android:text="HardWork Coroutinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_coroutine_hard_work"
            app:layout_constraintStart_toEndOf="@+id/btn_example1_hard_work"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_example1_hard_work"
            app:layout_constraintBottom_toBottomOf="@+id/btn_example1_hard_work"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <Button
            android:text="HardWork Coroutinos X Core"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_coroutine_hard_work_x_stream"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_example1_coroutine_hard_work"
            app:layout_constraintStart_toStartOf="@+id/btn_example1_coroutine_hard_work"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/textView_hard_work_result"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_example1_coroutine_hard_work_status"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_exm1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_example1_coroutine_hard_work_x_stream"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/btn_example1_coroutine_hard_work_x_stream"
            app:layout_constraintBottom_toBottomOf="@+id/btn_example1_coroutine_hard_work_x_stream"/>
    <TextView
            android:text="Factorial  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_test1_start" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_example1_hard_work"
            app:layout_constraintEnd_toStartOf="@+id/editText_ex1_factorial" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_ex1_factorial"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <Button
            android:text="HardWork Coroutinos whit status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_coroutine_hard_work_status" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_example1_coroutine_hard_work_x_stream"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" android:src="@drawable/droid"
            android:id="@+id/imageView_ex1_star" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
    />

</android.support.constraint.ConstraintLayout>