<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button

            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_test1_start"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar1"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_test1_stop" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_test1_start"
            app:layout_constraintTop_toTopOf="@+id/btn_test1_start"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test1_start"/>
    <Button
            android:text="HardWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_hard_work" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/btn_test1_start"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp" android:src="@drawable/droid"
            android:id="@+id/imageView_ex1_star" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
        />
    <Button
            android:text="HardWork Coroutinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_coroutine_hard_work"
            app:layout_constraintStart_toEndOf="@+id/btn_example1_hard_work"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_example1_hard_work"
            app:layout_constraintBottom_toBottomOf="@+id/btn_example1_hard_work"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_hard_work_result" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_example1_coroutine_hard_work"
            app:layout_constraintStart_toStartOf="@+id/btn_example1_hard_work"
            app:layout_constraintEnd_toEndOf="@+id/btn_example1_hard_work" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_example1_coroutine_hard_work_4_stream"/>
    <Button
            android:text="HardWork Coroutinos 4 stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_example1_coroutine_hard_work_4_stream"
            app:layout_constraintStart_toEndOf="@+id/textView_hard_work_result"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_example1_coroutine_hard_work"/>

</android.support.constraint.ConstraintLayout>